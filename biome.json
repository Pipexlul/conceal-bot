{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": ["src/**/*.ts", "src/**/*.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"quoteStyle": "double",
			"semicolons": "always",
			"indentStyle": "space",
			"indentWidth": 2,
			"trailingComma": "es5"
		}
	}
}
